FROM opensearchstaging/opensearch:2.15.0

USER root
RUN yum install unzip procps -y
USER opensearch
RUN  rm -rf plugins/opensearch-knn
RUN mkdir plugins/opensearch-knn
COPY tmp/artifacts/opensearch-knn-2.15.0.0-SNAPSHOT.zip plugins/opensearch-knn/opensearch-knn-2.15.0.0-SNAPSHOT.zip
RUN unzip plugins/opensearch-knn/opensearch-knn-2.15.0.0-SNAPSHOT.zip -d plugins/opensearch-knn/
COPY utils/process-stats-collector.sh /process-stats-collector.sh
COPY utils/profile-helper.sh /profile-helper.sh
